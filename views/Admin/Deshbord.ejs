<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - JOY Hardware</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/Admin/Deshbord.css">
</head>
<body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-blue-800 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">JOY Hardware Seller Portal</h1>
            <div class="flex items-center space-x-4">
                <span class="text-sm">Welcome, Admin</span>
                <button class="bg-red-500 hover:bg-red-600 px-3 py-1 rounded text-sm">Logout</button>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="bg-gray-200 p-2 shadow-sm">
        <div class="container mx-auto flex space-x-4">
            <a href="/seller" class="px-3 py-1 rounded bg-blue-100 text-blue-800 font-medium">Dashboard</a>
            <a href="/seller/products" class="px-3 py-1 rounded hover:bg-gray-300">Products</a>
            <a href="/seller/product/new" class="px-3 py-1 rounded hover:bg-gray-300">Add Product</a>
            <a href="/seller/orders" class="px-3 py-1 rounded hover:bg-gray-300">Orders</a>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-6 text-gray-800">Dashboard Overview</h1>
        
        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <!-- Total Sales -->
            <div class="card bg-white p-4 rounded-lg shadow">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-gray-500">Total Sales</p>
                        <h2 class="text-2xl font-bold">₹25,420</h2>
                    </div>
                    <div class="bg-blue-100 p-3 rounded-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
                <p class="text-green-500 mt-2">+12% from last month</p>
            </div>
            
            <!-- Total Orders -->
            <div class="card bg-white p-4 rounded-lg shadow">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-gray-500">Total Orders</p>
                        <h2 class="text-2xl font-bold">42</h2>
                    </div>
                    <div class="bg-green-100 p-3 rounded-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                    </div>
                </div>
                <p class="text-green-500 mt-2">+5% from last month</p>
            </div>
            
            <!-- Products -->
            <div class="card bg-white p-4 rounded-lg shadow">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-gray-500">Total Products</p>
                        <h2 class="text-2xl font-bold">28</h2>
                    </div>
                    <div class="bg-purple-100 p-3 rounded-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                    </div>
                </div>
                <p class="text-green-500 mt-2">+3 new this week</p>
            </div>
            
            <!-- Low Stock -->
            <div class="card bg-white p-4 rounded-lg shadow">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-gray-500">Low Stock</p>
                        <h2 class="text-2xl font-bold">5</h2>
                    </div>
                    <div class="bg-red-100 p-3 rounded-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    </div>
                </div>
                <p class="text-red-500 mt-2">Need restocking</p>
            </div>
        </div>
        
        <!-- Recent Orders -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-gray-800">Recent Orders</h2>
                <a href="/seller/products" class="text-blue-600 hover:text-blue-800 text-sm">View All</a>
            </div>
            
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="text-left p-3">Order ID</th>
                            <th class="text-left p-3">Customer</th>
                            <th class="text-left p-3">Date</th>
                            <th class="text-left p-3">Amount</th>
                            <th class="text-left p-3">Status</th>
                            <th class="text-left p-3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(let order of orders.slice(-3)){%>
                            <tr class="border-b">
                                <td class="p-3">#JOY-<%=order.orderid%></td>
                                <td class="p-3"><%=order.firstname%> <%=order.lastname%></td>
                                <td class="p-3"><%= new Date(order.createdAt).toLocaleDateString() %></td>
                                <td class="p-3">₹<%=order.totalPrice%></td>
                                <td class="p-3"><span class="status-badge status-pending">Pending</span></td>
                                <td class="p-3">
                                    <a href="#" class="text-blue-600 hover:text-blue-800">View</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Recent Products -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-gray-800">Recent Products</h2>
                <a href="/seller/products" class="text-blue-600 hover:text-blue-800 text-sm">View All</a>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Product 1 -->
                 <%for(let product of allproducts.slice(-3)){%>
                    <div class="border rounded-lg p-4">
                        <img src="<%=product.image[0].url%>" alt="<%=product.name%>" class="w-full h-40 object-contain mb-3">
                        <h3 class="font-bold"><%=product.name%></h3>
                        <p class="text-gray-600 text-sm mb-2"><%=product.small_description%></p>
                        <div class="flex justify-between items-center">
                            <span class="font-bold">₹<%=product.price%></span>
                            <span class="text-sm bg-gray-100 px-2 py-1 rounded">In Stock: <%=product.stock%></span>
                        </div>
                    </div>
                <% } %>               
            </div>
        </div>
    </main>

    <script src="/script/Admin/Deshbord.js"></script>
</body>
</html>